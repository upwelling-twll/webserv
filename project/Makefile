NAME      := webserv

# ──────────────────────────────── Компилятор ──────────────────────────────── #
CXX       := c++
CXXFLAGS  := -Wall -Wextra -Werror -std=c++98

# ─────────────────────────────── Исходники ────────────────────────────────── #
SRC       := $(shell find . -type f -name '*.cpp')
OBJ       := $(SRC:.cpp=.o)

# ──────────────────────────────── Цели по умолчанию ───────────────────────── #
.PHONY: all clean fclean re run

all: $(NAME)

$(NAME): $(OBJ)
	$(CXX) $(CXXFLAGS) $^ -o $@

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# ──────────────────────────────── Уборка ───────────────────────────────────── #
clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

# ─────────────────────────────── Запуск ────────────────────────────────────── #
run: $(NAME)
	./$(NAME) example.conf